                CourseNameSummary.Text = "Course Name : " + course.getName();
            }
            if (e.TabPage.Name == Level4Tab.Name)
            {
                tab_update(Level.LEVEL_4, ref tab4ControlGroups, Tab4ModulePanel);
            }
        }



